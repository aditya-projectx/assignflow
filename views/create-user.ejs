<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create User</title>
    <style>
  body {
    font-family: Arial, sans-serif;
    background-color: #0f172a;
    color: #e5e7eb;
    max-width: 600px;
    margin: 100px auto;
    padding: 0 10px;
  }

  h1 {
    color: #f9fafb;
    margin-bottom: 24px;
    text-align: center;
  }

  /* Form container feel */
  form {
    background-color: #020617;
    padding: 24px;
    border-radius: 12px;
    border: 1px solid #334155;
    box-shadow: 0 10px 30px rgba(0,0,0,0.6);
  }

  .form-group {
    margin-bottom: 16px;
  }

  label {
    display: block;
    margin-bottom: 6px;
    font-weight: 600;
    color: #e5e7eb;
  }

  input,
  select {
    width: 100%;
    padding: 10px;
    border: 1px solid #334155;
    border-radius: 6px;
    background-color: #020617;
    color: #e5e7eb;
  }

  input::placeholder {
    color: #9ca3af;
  }

  input:focus,
  select:focus {
    outline: none;
    border-color: #3b82f6;
  }

  /* Submit button */
  button {
    width: 100%;
    background-color: #3b82f6;
    color: white;
    padding: 12px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-size: 15px;
    font-weight: 600;
    margin-top: 10px;
  }

  button:hover {
    background-color: #2563eb;
  }

  /* Password field hint */
  input[type="password"],
  input[type="text"] {
    letter-spacing: 0.3px;
  }
</style>

</head>
<body>
    <div id="header"><%- include('partials/header') %></div>
    
    <h1>Create User</h1>
    <form action="/admin/users/create" method="POST">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required>
        </div>

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
        </div>

        <div class="form-group" style="position: relative;">
            <label for="password">Password:</label>
            <input type="password" id="pwd" name="password" value="<%= pwd %>"
                onclick="this.type = this.type === 'password' ? 'text' : 'password'">
        </div>

        <div class="form-group">
            <label for="phone">Phone:</label>
            <input type="tel" id="phone" name="phn" required>
        </div>

        <div class="form-group">
            <label for="department">Department:</label>
            <select id="department" name="dept" required>
                <option value=""selected disabled>Select Department</option>
                    <% dept.forEach(d => { %>
                        <option value="<%= d.name%>"> <%= d.name%> </option>
                    <% }); %>
                
            </select>
        </div>

        <div class="form-group">
            <label for="role">Role:</label>
            <select id="role" name="role" required>
                <option value="" selected disabled>Select Role</option>
                <option value="student">Student</option>
                <option value="professor">Professor</option>
                <option value="hod">HOD</option>
            </select>
        </div>

        <button type="submit">Create User</button>
    </form>
</body>
</html>