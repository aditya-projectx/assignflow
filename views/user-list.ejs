<!DOCTYPE html>
<html>
<head>
  <title>All Users</title>

  <style>
  body {
    font-family: system-ui, sans-serif;
    background-color: #0f172a;
    padding: 30px;
    color: #e5e7eb;
  }

  h2 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #f9fafb;
  }

  /* Filters */
  .filters form {
    display: flex;
    gap: 15px;
    margin-bottom: 20px;
    flex-wrap: wrap;
  }

  .filters input,
  .filters select {
    padding: 10px 12px;
    border: 1px solid #334155;
    border-radius: 6px;
    min-width: 200px;
    background-color: #020617;
    color: #e5e7eb;
    outline: none;
  }

  .filters input::placeholder {
    color: #9ca3af;
  }

  .filters input:focus,
  .filters select:focus {
    border-color: #3b82f6;
  }

  .filters button {
    padding: 10px 16px;
    border-radius: 6px;
    border: none;
    background-color: #3b82f6;
    color: white;
    cursor: pointer;
    font-weight: 500;
  }

  .filters button:hover {
    background-color: #2563eb;
  }

  /* Table */
  table {
    width: 100%;
    border-collapse: collapse;
    background-color: #020617;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 8px 30px rgba(0,0,0,0.5);
  }

  thead {
    background-color: #020617;
  }

  thead th {
    text-align: left;
    padding: 14px 18px;
    font-size: 14px;
    font-weight: 600;
    color: #f9fafb;
    border-bottom: 1px solid #334155;
  }

  tbody td {
    padding: 16px 18px;
    border-bottom: 1px solid #334155;
    color: #e5e7eb;
  }

  tbody tr:hover {
    background-color: #1e293b;
  }

  /* Buttons */
  .btn-edit,
  .btn-delete {
    padding: 6px 14px;
    border-radius: 6px;
    font-size: 14px;
    text-decoration: none;
    font-weight: 500;
  }

  .btn-edit {
    background-color: #3b82f6;
    color: #fff;
  }

  .btn-edit:hover {
    background-color: #2563eb;
  }

  .btn-delete {
    color: #ef4444;
    margin-left: 10px;
  }

  .btn-delete:hover {
    text-decoration: underline;
  }

  /* Add User Button */
  .add-user {
    display: block;
    margin: 14px auto 0;
    background-color: #3b82f6;
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 6px;
    cursor: pointer;
    font-weight: 500;
  }

  .add-user:hover {
    background-color: #2563eb;
  }
</style>

</head>

<body>
  <%- include('partials/header') %>
  <h2>All Users</h2>

  <div class="filters">
    <form method="GET" action="/admin/users">
      <input type="text" name="search" placeholder="Search by name or email" >
      <select name="role">
        <option value="">All Roles</option>
        <option value="Student">Student</option>
        <option value="Professor">Professor</option>
        <option value="HOD">HOD</option>
      </select>

      <select name="department">
        <option value="">All Departments</option>
        <option value="Computer Science">Computer Science</option>
        <option value="Physics">Physics</option>
        <option value="Civil Engineering">Civil Engineering</option>
        <option value="Chemistry">Chemistry</option>
      </select>

      <button type="submit">Filter</button>
    </form>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Department</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% user.forEach(user => { %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.department %></td>
        <td>
          <a href="/admin/users/<%= user._id %>/edit" class="btn-edit">Edit</a>
          <a href="/admin/users/<%= user._id %>/<%= user.department%>/delete" onclick="return confirm('Delete this user?')" class="btn-delete">Delete</a>
        </td>
      </tr>
      <% }) %>
    </tbody>

  </table>

</body>
<button style="margin-left: 40%; margin-top: 10px;" class="add-user" onclick="window.location.href='/admin/users/create'">Add User</button>
</html>
